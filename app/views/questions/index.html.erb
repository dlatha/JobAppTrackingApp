<h1>Listing questions</h1>

<table>
  <tr>
    <th>Interview</th>
    <th>Typeofquestion</th>
    <th>Title</th>
    <th>Body</th>
    <th>Youranswer</th>
    <th>Rightanswer</th>
    <th>Improvements</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.interview_id %></td>
    <td><%= question.typeOfQuestion %></td>
    <td><%= question.title %></td>
    <td><%= question.body %></td>
    <td><%= question.yourAnswer %></td>
    <td><%= question.rightAnswer %></td>
    <td><%= question.improvements %></td>
    <td><%= question.notes %></td>
    <td><%= link_to 'Show', question %></td>
    <td><%= link_to 'Edit', edit_question_path(question) %></td>
    <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

